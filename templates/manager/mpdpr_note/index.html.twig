{% extends 'manager/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des notes des maires, presidents des départements et présidents des régions
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card my-3">
                    <div class="card-header d-inline-flex w-100 flex-wrap align-items-center justify-content-between border-0">
                        <h5 class="card-title">Liste des notes des maires, presidents des départements et présidents des régions</h5>
                        <ul class="list-unstyled float-right d-flex flex-row align-items-center">
                            <li class="pl-2">
                                <a href="{{ path('mdpdr_note_import') }}"
                                   class="btn btn-success btn-sm">
                                    <i class="fa fa-file-excel"></i> Importer
                                </a>
                            </li>
                            {% if m_p_d_p_r_notes > 0 %}
                                <li class="pl-2">
                                    <a href="{{ path('mdpdr_note_export') }}"
                                       class="btn btn-primary btn-sm">
                                        <i class="fa fa-file-excel"></i> Exporter
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    <div class="card-body">
                        {% include 'manager/_common/_flash_message.html.twig' %}
                        <div class="table-responsive">
                            <table class="dataTable-mpdpr-notes table table-bordered" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Adresse IP</th>
                                        <th>Date </th>
                                        <th>Nom député</th>
                                        <th>Prénom député</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
