                                    <div class="col-lg-3 col-md-6">
                                          <a href="{{ path('mayor_index') }}" class="mb-2 d-block text-decoration-none">
                                                <div class="card">
                                                      <div class="card-body d-flex flex-row align-items-center p-0">
                                                            <span class="bg-warning p-3 font-weight-bolder">{{ mayors }}</span>
                                                            <span class="flex-fill p-3 font-weight-bold">Maires</span>
                                                      </div>
                                                </div>
                                          </a>
                                    </div>
                                    <div class="col-lg-3 col-md-6">
                                          <a href="{{ path('senator_index') }}" class="mb-2 d-block text-decoration-none">
                                                <div class="card">
                                                      <div class="card-body d-flex flex-row align-items-center p-0">
