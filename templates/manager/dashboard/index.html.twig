                                    <div class="col-lg-3 col-md-6">
                                          <a href="{{ path('departmental_advisor_index') }}?role=president" class="mb-2 d-block text-decoration-none">
                                                <div class="card">
                                                      <div class="card-body d-flex flex-row align-items-center p-0">
                                                            <span class="bg-warning p-3 font-weight-bolder">{{ departmentalPresidents }}</span>
                                                            <span class="flex-fill p-3 font-weight-bold">Présidents des départements</span>
                                                      </div>
                                                </div>
                                          </a>
                                    </div>
                                    <div class="col-lg-3 col-md-6">
                                          <a href="{{ path('regional_advisor_index') }}?role=president" class="mb-2 d-block text-decoration-none">
                                                <div class="card">
                                                      <div class="card-body d-flex flex-row align-items-center p-0">
                                                            <span class="bg-warning p-3 font-weight-bolder">{{ regionalPresidents }}</span>
                                                            <span class="flex-fill p-3 font-weight-bold">
                                                                  Présidents des régions
                                                            </span>
                                                      </div>
                                                </div>
                                          </a>
                                    </div>
                              </div>

                              <div class="row">
                                    <div class="col-lg-6">
                                          <div class="card mt-3">
                                                <div class="card-body">
                                                      <canvas id="areaChart" style="height: 450px;" data-labels="{{ areaStats.keys|json_encode }}" data-values="{{ areaStats.counts|json_encode }}"></canvas>
                                                </div>
                                          </div>
                                    </div>
                                    <div class="col-lg-6">
                                          <div class="card mt-3">
                                                <div class="card-body">
                                                      <canvas id="departmentChart" style="height: 450px;" data-labels="{{ depStats.keys|json_encode }}" data-values="{{ depStats.counts|json_encode }}"></canvas>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </div>
            </div>
      </div>
{% endblock %}
{% block javascripts %}
      {{ parent() }}
      <script>
            var areaChartEl = document.getElementById('areaChart'),
                    areaLabels = areaChartEl.getAttribute('data-labels'),
                    areaData = areaChartEl.getAttribute('data-values'),
                  depChartEl = document.getElementById('departmentChart'),
                    depLabels = depChartEl.getAttribute('data-labels'),
                    depData = depChartEl.getAttribute('data-values');

            var areaChart = new Chart(areaChartEl.getContext('2d'), {
                  type: 'line',
                  data: {
                        labels: JSON.parse(areaLabels),
                        datasets: [{
                              label: 'Nombre des élus par région',
                              data: JSON.parse(areaData),
                              backgroundColor: [
                                    'rgba(255, 159, 64, 0.2)'
                              ],
                              borderColor: [
                                    'rgba(255, 159, 64, 1)'
                              ],
                              borderWidth: 1
                        }]
                  }
            });

            var depChart = new Chart(depChartEl.getContext('2d'), {
                  type: 'line',
                  data: {
                        labels: JSON.parse(depLabels),
                        datasets: [{
                              label: 'Nombre des élus par département',
                              data: JSON.parse(depData),
                              backgroundColor: [
                                    'rgba(54, 162, 235, 0.2)',
                              ],
                              borderColor: [
                                    'rgba(54, 162, 235, 1)',
                              ],
                              borderWidth: 1
                        }]
                  },
            });
      </script>
{% endblock %}