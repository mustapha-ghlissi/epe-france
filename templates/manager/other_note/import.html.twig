{% extends 'manager/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Importer les comptes comptables et financiers
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card my-3">
                    <div class="card-header d-inline-flex w-100 flex-wrap align-items-center justify-content-between border-0">
                        <h5 class="card-title">Importer</h5>
                        <a href="{{ path('tax_index') }}" class="btn btn-link btn-sm float-right">
                            <i class="fa fa-arrow-left"></i> Retour
                        </a>
                    </div>
                    <div class="card-body">
                        {% include 'manager/_common/_flash_message.html.twig' %}
                        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                        {{ form_row(form.file) }}
                        <div class="form-group text-right">
                            <button class="btn btn-primary">Importer et Enregistrer</button>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
