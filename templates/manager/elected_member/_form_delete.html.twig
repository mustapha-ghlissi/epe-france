<form method="post" action="{{ path('manager_delete_extra_data', { categoryId: categoryId, memberId: electedMember.id, id: extraData.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ extraData.id) }}">
    <button class="btn btn-danger">
        <i class="fa fa-trash-alt"></i> {{ button_label|default('') }}
    </button>
</form>
