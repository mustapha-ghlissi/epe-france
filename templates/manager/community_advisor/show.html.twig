{% extends 'manager/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Détails conseiller communautaire
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card my-3">
                    <div class="card-header d-inline-flex w-100 flex-wrap align-items-center justify-content-between border-0">
                        <h5 class="card-title">Détails conseiller communautaire</h5>
                        <ul class="list-unstyled d-inline-flex align-items-center float-right">
                            <li class="px-1">
                                <a href="{{ path('community_advisor_index') }}" class="btn btn-link">
                                    <i class="fa fa-arrow-left"></i> Retour
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('manager_elected_member', {categoryId: 2, id: community_advisor.id }) }}" class="btn btn-secondary">
                                    <i class="fa fa-newspaper"></i> Ajouter extra data
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('community_advisor_edit', {'id': community_advisor.id}) }}" class="btn btn-success">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('board_minute_index', {categoryId: 2, id: community_advisor.id }) }}" class="btn btn-warning">
                                    <i class="fa fa-file"></i> PVs de conseils
                                </a>
                            </li>
                            <li class="px-1">
                                {{ include('manager/community_advisor/_delete_form.html.twig', {button_label: 'Supprimer'}) }}
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        {% include 'manager/_common/_flash_message.html.twig' %}
                        <table class="table table-bordered">
                            <tbody>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Infos générales</th>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ community_advisor.lastName|upper }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ community_advisor.firstName|capitalize }}</td>
                            </tr>
                            <tr>
                                <th>Sexe</th>
                                <td>{{ community_advisor.gender|upper }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ community_advisor.birthDate ? community_advisor.birthDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails profession</th>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ community_advisor.professionCode }}</td>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ community_advisor.professionLabel }}</td>
                            </tr>
                            <tr>
                                <th>Date début de mandate</th>
                                <td>{{ community_advisor.mandateStartDate ? community_advisor.mandateStartDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Libellé de fonction</th>
                                <td>{{ community_advisor.functionLabel }}</td>
                            </tr>
                            <tr>
                                <th>Date début de fonction</th>
                                <td>{{ community_advisor.functionStartDate ? community_advisor.functionStartDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">
                                    Détails géographique
                                </th>
                            </tr>
                            <tr>
                                <th>Latitude - Longitude</th>
                                <td>{{ community_advisor.latitude ~ ' - ' ~ community_advisor.longitude }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails département</th>
                            </tr>
                            <tr>
                                <th>Code EPCI</th>
                                <td>{{ community_advisor.epciDepartmentCode }}</td>
                            </tr>
                            <tr>
                                <th>SIREN</th>
                                <td>{{ community_advisor.siren }}</td>
                            </tr>
                            <tr>
                                <th>Libellé EPCI</th>
                                <td>{{ community_advisor.epciLabel }}</td>
                            </tr>

                            <tr>
                                <th>Code</th>
                                <td>{{ community_advisor.departmentCode }}</td>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ community_advisor.departmentLabel }}</td>
                            </tr>
                            <tr>
                                <th>Chef-Lieu</th>
                                <td>{{ community_advisor.departmentCapital }}</td>
                            </tr>
                            <tr>
                                <th>Population</th>
                                <td>{{ community_advisor.departmentPopulation }}</td>
                            </tr>
                            <tr>
                                <th>Superficie (km²)</th>
                                <td>{{ community_advisor.departmentSurface }}</td>
                            </tr>
                            <tr>
                                <th>Densité (Hab./km²)</th>
                                <td>{{ community_advisor.departmentDensity }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails région</th>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ community_advisor.areaLabel }}</td>
                            </tr>
                            <tr>
                                <th>Nombre des départements</th>
                                <td>{{ community_advisor.nbDepartments }}</td>
                            </tr>
                            <tr>
                                <th>Nombre de service public</th>
                                <td>{{ community_advisor.nbPublicService }}</td>
                            </tr>
                            <tr>
                                <th>Chef-Lieu</th>
                                <td>{{ community_advisor.areaCapital }}</td>
                            </tr>
                            <tr>
                                <th>Superficie (km²)</th>
                                <td>{{ community_advisor.areaSurface }}</td>
                            </tr>
                            <tr>
                                <th>Population {{ community_advisor.populationYear }}</th>
                                <td>{{ community_advisor.areaPopulation }}</td>
                            </tr>
                            <tr>
                                <th>Densité (Hab./km²)</th>
                                <td>{{ community_advisor.areaDensity }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails commune</th>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ community_advisor.communeCode }}</td>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ community_advisor.communeLabel }}</td>
                            </tr>
                            <tr>
                                <th>Code postal</th>
                                <td>{{ community_advisor.zipCode }}</td>
                            </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
