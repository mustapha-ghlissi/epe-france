{% extends 'manager/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Détails conseiller communautaire
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card my-3">
                    <div class="card-header d-inline-flex w-100 flex-wrap align-items-center justify-content-between border-0">
                        <h5 class="card-title">Détails impôt</h5>
                        <ul class="list-unstyled d-inline-flex align-items-center float-right">
                            <li class="px-1">
                                <a href="{{ path('accounting_index') }}" class="btn btn-link">
                                    <i class="fa fa-arrow-left"></i> Retour
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('accounting_edit', {'id': accounting.id}) }}"
                                   class="btn btn-success">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                            </li>
                            <li class="px-1">
                                {{ include('manager/accounting/_delete_form.html.twig', {button_label: 'Supprimer'}) }}
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        {% include 'manager/_common/_flash_message.html.twig' %}
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ accounting.id }}</td>
                            </tr>
                            <tr>
                                <th>Année</th>
                                <td>{{ accounting.year }}</td>
                            </tr>
                            <tr>
                                <th>Code INSEE</th>
                                <td>{{ accounting.codeInsee }}</td>
                            </tr>
                            <tr class="bg-warning">
                                <th colspan="2">
                                    Infos commune
                                </th>
                            </tr>
                            <tr>
                                <th>Nom de la commune</th>
                                <td>{{ accounting.communeLabel }}</td>
                            </tr>
                            <tr>
                                <th>Nom de l'élu</th>
                                <td>{{ accounting.communeLastName|title }}</td>
                            </tr>
                            <tr>
                                <th>Prénom de l'élu</th>
                                <td>{{ accounting.communeFirstName|upper }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ accounting.communeBirthDate ? accounting.communeBirthDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning">
                                <th colspan="2">
                                    Infos département
                                </th>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ accounting.departmentCode }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ accounting.departmentLabel }}</td>
                            </tr>
                            <tr>
                                <th>Nom de l'élu</th>
                                <td>{{ accounting.depLastName|title }}</td>
                            </tr>
                            <tr>
                                <th>Prénom de l'élu</th>
                                <td>{{ accounting.depFirstName|upper }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ accounting.depBirthDate ? accounting.depBirthDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning">
                                <th colspan="2">
                                    Infos région
                                </th>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ accounting.areaLabel }}</td>
                            </tr>
                            <tr>
                                <th>Nom de l'élu</th>
                                <td>{{ accounting.areaLastName|upper }}</td>
                            </tr>
                            <tr>
                                <th>Prénom de l'élu</th>
                                <td>{{ accounting.areaFirstName|title }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ accounting.areaBirthDate ? accounting.areaBirthDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning">
                                <th colspan="2">
                                    Infos générales
                                </th>
                            </tr>
                            <tr>
                                <th>Population</th>
                                <td>{{ accounting.population }}</td>
                            </tr>
                            <tr>
                                <th>Type de groupement d'appartenance</th>
                                <td>{{ accounting.groupingType }}</td>
                            </tr>
                            <tr>
                                <th>Total des produits de fonctionnnement</th>
                                <td>{{ accounting.productsTotal }}</td>
                            </tr>
                            <tr>
                                <th>Impôts mocaux</th>
                                <td>{{ accounting.localTax }}</td>
                            </tr>
                            <tr>
                                <th>Autres impôts et taxes</th>
                                <td>{{ accounting.otherTax }}</td>
                            </tr>
                            <tr>
                                <th>Dotation globale</th>
                                <td>{{ accounting.globalAllocation }}</td>
                            </tr>
                            <tr>
                                <th>Total des charges</th>
                                <td>{{ accounting.totalExpenses }}</td>
                            </tr>
                            <tr>
                                <th>Charges de personnel</th>
                                <td>{{ accounting.personalExpenses }}</td>
                            </tr>
                            <tr>
                                <th>Achats et charges externes</th>
                                <td>{{ accounting.externalExpenses }}</td>
                            </tr>
                            <tr>
                                <th>Charges financières</th>
                                <td>{{ accounting.financialExpenses }}</td>
                            </tr>
                            <tr>
                                <th>Subventions versées</th>
                                <td>{{ accounting.grants }}</td>
                            </tr>
                            <tr>
                                <th>Taxe d'habitation</th>
                                <td>{{ accounting.housingTax }}</td>
                            </tr>
                            <tr>
                                <th>Taxe foncière sur les propriétés bâties</th>
                                <td>{{ accounting.propertyTax }}</td>
                            </tr>
                            <tr>
                                <th>Taxe foncière sur le propriétés non bâties</th>
                                <td>{{ accounting.noPropertyTax }}</td>
                            </tr>
                            <tr>
                                <th>Emprunts bancaires et dettes assimilées</th>
                                <td>{{ accounting.brankCredits }}</td>
                            </tr>
                            <tr>
                                <th>Subventions reçues</th>
                                <td>{{ accounting.receivedGrants }}</td>
                            </tr>
                            <tr>
                                <th>Dépenses d'équipement</th>
                                <td>{{ accounting.equipmentExpenses }}</td>
                            </tr>
                            <tr>
                                <th>Remboursement d'emprunts et dettes assimilées</th>
                                <td>{{ accounting.creditRefund }}</td>
                            </tr>
                            <tr>
                                <th>Annuité de la dette</th>
                                <td>{{ accounting.source }}</td>
                            </tr>
                            <tr>
                                <th>Source</th>
                                <td>{{ accounting.source }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
