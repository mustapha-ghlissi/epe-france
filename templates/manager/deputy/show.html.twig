{% extends 'manager/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Détails député
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card my-3">
                    <div class="card-header d-inline-flex w-100 flex-wrap align-items-center justify-content-between border-0">
                        <h5 class="card-title">Détails maire</h5>
                        <ul class="list-unstyled d-inline-flex align-items-center float-right">
                            <li class="px-1">
                                <a href="{{ path('deputy_index') }}" class="btn btn-link">
                                    <i class="fa fa-arrow-left"></i> Retour
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('manager_elected_member', {categoryId: 8, id: deputy.id }) }}" class="btn btn-secondary">
                                    <i class="fa fa-newspaper"></i> Ajouter extra data
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('deputy_edit', {'id': deputy.id}) }}" class="btn btn-success">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                            </li>
                            <li class="px-1">
                                <a href="{{ path('board_minute_index', {categoryId: 8, id: deputy.id }) }}" class="btn btn-warning">
                                    <i class="fa fa-file"></i> PVs de conseils
                                </a>
                            </li>
                            <li class="px-1">
                                {{ include('manager/deputy/_delete_form.html.twig', {button_label: 'Supprimer'}) }}
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        {% include 'manager/_common/_flash_message.html.twig' %}
                        <table class="table table-bordered">
                            <tbody>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Infos générales</th>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ deputy.lastName|upper }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ deputy.firstName|capitalize }}</td>
                            </tr>
                            <tr>
                                <th>Sexe</th>
                                <td>{{ deputy.gender|upper }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ deputy.birthDate ? deputy.birthDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails profession</th>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ deputy.professionCode }}</td>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ deputy.professionLabel }}</td>
                            </tr>
                            <tr>
                                <th>Date début de mandate</th>
                                <td>{{ deputy.mandateStartDate ? deputy.mandateStartDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">
                                    Détails géographique
                                </th>
                            </tr>
                            <tr>
                                <th>Latitude - Longitude</th>
                                <td>{{ deputy.latitude ~ ' - ' ~ deputy.longitude }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails département</th>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ deputy.departmentCode }}</td>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ deputy.departmentLabel }}</td>
                            </tr>
                            <tr>
                                <th>Chef-Lieu</th>
                                <td>{{ deputy.departmentCapital }}</td>
                            </tr>
                            <tr>
                                <th>Population</th>
                                <td>{{ deputy.departmentPopulation }}</td>
                            </tr>
                            <tr>
                                <th>Superficie (km²)</th>
                                <td>{{ deputy.departmentSurface }}</td>
                            </tr>
                            <tr>
                                <th>Densité (Hab./km²)</th>
                                <td>{{ deputy.departmentDensity }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails région</th>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ deputy.areaLabel }}</td>
                            </tr>
                            <tr>
                                <th>Nombre des départements</th>
                                <td>{{ deputy.nbDepartments }}</td>
                            </tr>
                            <tr>
                                <th>Nombre de service public</th>
                                <td>{{ deputy.nbPublicService }}</td>
                            </tr>
                            <tr>
                                <th>Chef-Lieu</th>
                                <td>{{ deputy.areaCapital }}</td>
                            </tr>
                            <tr>
                                <th>Superficie (km²)</th>
                                <td>{{ deputy.areaSurface }}</td>
                            </tr>
                            <tr>
                                <th>Population {{ deputy.populationYear }}</th>
                                <td>{{ deputy.areaPopulation }}</td>
                            </tr>
                            <tr>
                                <th>Densité (Hab./km²)</th>
                                <td>{{ deputy.areaDensity }}</td>
                            </tr>
                            <tr class="bg-warning text-white">
                                <th colspan="2" align="center">Détails Cir. légilative</th>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>{{ deputy.legislativeCirCode }}</td>
                            </tr>
                            <tr>
                                <th>Libellé</th>
                                <td>{{ deputy.legislativeCirLabel }}</td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
